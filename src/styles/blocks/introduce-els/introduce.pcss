.introduce {
    height: 100vh;
    width: 100%;
    /* background-image: url(.png); */
}

.scroll__container {
    color: #fff;
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
    cursor: pointer;
    user-select: none;
}

.scroll-image {
    width: 20px;
    height: 30px;
    margin-left: 22px;
}